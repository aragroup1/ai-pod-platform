# Environment
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-super-secret-key-here-minimum-32-chars
ENCRYPTION_KEY=your-encryption-key-for-api-keys-32-chars
API_V1_PREFIX=/api/v1

# Database (Railway will provide)
DATABASE_URL=postgresql://user:password@host:5432/railway

# Redis (Railway will provide)
REDIS_URL=redis://default:password@host:6379

# AI Generation APIs (Add your keys here)
REPLICATE_API_TOKEN=
LEONARDO_API_KEY=
OPENAI_API_KEY=
IDEOGRAM_API_KEY=
STABILITY_API_KEY=

# Trend Analysis
SERPAPI_KEY=
GOOGLE_TRENDS_API_KEY=

# POD Providers
PRINTFUL_API_TOKEN=
PRINTIFY_API_TOKEN=

# E-commerce Platforms
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_ACCESS_TOKEN=
SHOPIFY_SHOP_DOMAIN=

# Storage (Cloudflare R2)
CLOUDFLARE_R2_ACCESS_KEY=
CLOUDFLARE_R2_SECRET_KEY=
CLOUDFLARE_R2_BUCKET=pod-assets
CLOUDFLARE_R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
CLOUDFLARE_R2_PUBLIC_URL=https://cdn.yourdomain.com

# Celery
CELERY_BROKER_URL=redis://default:password@host:6379/1
CELERY_RESULT_BACKEND=redis://default:password@host:6379/2

# CORS
CORS_ORIGINS=["http://localhost:3000"]
DOMAIN=yourdomain.com

# Google Keyword Planner / Google Ads API
GOOGLE_ADS_DEVELOPER_TOKEN=your_dev_token_here
GOOGLE_ADS_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_ADS_CLIENT_SECRET=your_client_secret
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token
