{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
      },
      "healthcheck": {
        "path": "/health",
        "timeout": 120,
        "interval": 15,
        "retries": 10
      }
    },
    {
      "name": "frontend",
      "build": {
        "builder": "NIXPACKS",
        "nixpacksConfig": {
          "installCommand": "npm install",
          "buildCommand": "npm run build",
          "startCommand": "npm start",
          "buildPath": "pod-dashboard"
        }
      },
      "healthcheck": {
        "path": "/",
        "timeout": 120,
        "interval": 15,
        "retries": 10
      }
    }
  ]
}
